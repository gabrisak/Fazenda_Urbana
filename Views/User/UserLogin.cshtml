<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Login</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item active text-white">Login</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Login Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Acessar Conta</h1>
                    </div>
                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="h-100 rounded">
                        <!-- Formulário de login -->
                        <form action="@Url.Action("Login", "Account")" method="post">
                            <input type="email" name="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Coloque seu E-mail" required>
                            <input type="password" name="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Coloque sua Senha" required>
                            <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary" type="submit">Entrar</button>
                        </form>
                        <!-- Links adicionais -->
                        <div class="text-center mt-3">
                            <a href="@Url.Action("ForgotUser", "User")" class="text-primary">Esqueceu a senha?</a>
                        </div>
                        <div class="text-center mt-3">
                            <p>Não tem uma conta? <a href="@Url.Action("NewUser", "User")" class="text-primary">Cadastre-se</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login End -->
