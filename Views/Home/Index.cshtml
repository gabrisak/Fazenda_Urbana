<script>
    $(document).ready(function () {
        // Adicionar ao localStorage quando clicar em "Comprar"
        $('.btn-comprar').on('click', function () {
            var produto = {
                id: $(this).data('id'), // ID do produto (se disponível)
                nome: $(this).data('nome'),
                preco: parseFloat($(this).data('preco').replace('R$', '').replace(',', '.')),
                quantidade: 1, // Começa com 1 ao adicionar no carrinho
                imagem: $(this).data('imagem') // URL da imagem do produto
            };

        // Função para adicionar produto ao carrinho
        $(".add-to-cart").click(function (e) {
            e.preventDefault();

            // Pega o ID do produto do botão
            var productId = $(this).data('id');

            // Pega os dados do produto
            var product = {
                id: productId,
                name: $(this).closest(".vesitable-item").find("h4").text(),
                price: $(this).closest(".vesitable-item").find("p.text-dark").text(),
                quantity: 1
            };

            // Verifica se já existe um carrinho no localStorage
            var cart = JSON.parse(localStorage.getItem("cart")) || [];

            // Verifica se o produto já está no carrinho
            var existingProduct = cart.find(item => item.id === product.id);
            if (existingProduct) {
                existingProduct.quantity += 1; // Se já existir, aumenta a quantidade
            } else {
                cart.push(product); // Se não, adiciona o produto ao carrinho
            }

            // Atualiza o localStorage com o carrinho atualizado
            localStorage.setItem("cart", JSON.stringify(cart));

            // Redireciona para a página do carrinho
            window.location.href = '@Url.Action("Cart", "Cart")';
        });
    });
</script>