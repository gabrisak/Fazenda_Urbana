<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        // Função para formatar o valor monetário
    function formatarMoeda(valor) {
        return 'R$' + valor.toFixed(2).replace('.', ',');
    }

    // Atualizar o total ao alterar a quantidade
    function updateCartTotal() {
        var total = 0;
        $('tbody tr').each(function () {
            var priceText = $(this).find('.price').text().replace('R$', '').trim();
            var price = parseFloat(priceText.replace('.', '').replace(',', '.'));

            if (isNaN(price)) {
                price = 0;
            }

            var quantity = parseInt($(this).find('.quantity-input').val());
            if (isNaN(quantity) || quantity < 1) {
                quantity = 1;
            }

            var subtotal = price * quantity;
            $(this).find('.total').text(formatarMoeda(subtotal));
            total += subtotal;
        });

        var frete = 3.00;
        total += frete;

        $('.total-carrinho').text(formatarMoeda(total));
        $('.subtotal').text(formatarMoeda(total - frete));

        if (total > 300) {
            frete = 0;
            $('.frete').text("Frete grátis!");
        } else {
            $('.frete').text("Valor Frete: R$" + frete.toFixed(2).replace('.', ','));
        }
    }

    $('.btn-plus').on('click', function () {
        var input = $(this).closest('.input-group').find('.quantity-input');
        var value = parseInt(input.val());
        input.val(value + 1);
        updateCartTotal();
    });

    $('.btn-minus').on('click', function () {
        var input = $(this).closest('.input-group').find('.quantity-input');
        var value = parseInt(input.val());
        if (value > 1) {
            input.val(value - 1);
            updateCartTotal();
        }
    });

    $('.btn-remove').on('click', function () {
        $(this).closest('tr').remove();
        updateCartTotal();
    });

    $('.btn-aplicar-cupom').on('click', function () {
        var cupom = $('#cupomCode').val();
        alert('Cupom aplicado: ' + cupom);
    });

    // Função para capturar os dados do pedido
    function capturarPedido() {
        var pedido = [];
        $('tbody tr').each(function () {
            var nome = $(this).find('td:nth-child(2)').text().trim();
            var preco = $(this).find('.price').text().replace('R$', '').trim();
            var quantidade = $(this).find('.quantity-input').val().trim();
            var total = $(this).find('.total').text().replace('R$', '').trim();

            pedido.push({
                nome: nome,
                preco: parseFloat(preco.replace(',', '.')),
                quantidade: parseInt(quantidade),
                total: parseFloat(total.replace(',', '.'))
            });
        });
        return pedido;
    }

    // Enviar pedido para o servidor ao clicar em "Finalizar"
    $('.btn-finalizar').on('click', function (e) {
        e.preventDefault();
        var pedido = capturarPedido();
        var frete = parseFloat($('.frete').text().replace('Valor Frete: R$', '').trim().replace(',', '.'));

        // Enviar via AJAX para o backend
        $.ajax({
            url: '/caminho-para-o-endpoint', // Substituir pelo endpoint real do backend
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                pedido: pedido,
                frete: frete,
                total: parseFloat($('.total-carrinho').text().replace('R$', '').replace(',', '.'))
            }),
            success: function (response) {
                alert('Pedido realizado com sucesso!');
                // Redirecionar para uma página de confirmação, se necessário
                window.location.href = '/pagina-de-confirmacao';
            },
            error: function (error) {
                alert('Ocorreu um erro ao finalizar o pedido.');
            }
        });
    });

    $(document).ready(function () {
        updateCartTotal();
    });
</script>
