<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Perfil do Usuário</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item active text-white">Perfil</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Profile Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <!-- User Information Section -->
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Perfil do Usuário</h1>
                    </div>
                </div>

                <!-- User Details Section -->
                <div class="col-lg-6 mx-auto">
                    <div class="h-100 rounded">
                        <h3 class="text-primary">Informações do Usuário</h3>
                        <p><strong>Nome Completo:</strong> Nome do Usuário</p>
                        <p><strong>E-mail:</strong> email@exemplo.com</p>
                        <p><strong>Telefone:</strong> (XX) XXXXX-XXXX</p>
                    </div>
                </div>

                <!-- Order History Section -->
                <div class="col-lg-6 mx-auto mt-5">
                    <h3 class="text-primary text-center">Histórico de Pedidos</h3>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Pedido #12345
                            <span class="badge bg-primary rounded-pill">Concluído</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Pedido #12346
                            <span class="badge bg-warning rounded-pill">Em Processamento</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Pedido #12347
                            <span class="badge bg-danger rounded-pill">Cancelado</span>
                        </li>
                    </ul>
                </div>

                <!-- Password Reset Section -->
                <div class="col-lg-6 mx-auto mt-5">
                    <div class="h-100 rounded">
                        <h3 class="text-primary">Alterar Senha</h3>
                        <form action="@Url.Action("ChangePassword", "User")" method="post">
                            <input type="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Senha Atual" required>
                            <input type="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Nova Senha" required>
                            <input type="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Confirmar Nova Senha" required>
                            <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary" type="submit">Atualizar Senha</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Profile End -->
